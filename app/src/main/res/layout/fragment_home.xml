<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/simpleSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:queryHint="Search City">

        <requestFocus />
    </androidx.appcompat.widget.SearchView>

    <ListView
        android:id="@+id/statesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorAccent"
        android:dividerHeight="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/Status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalCasesTitle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Total Cases"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totalCasesValue"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="62614"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activeCasesTitle"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Active Cases"
                    android:textColor="#FFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/activeCasesValue"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="1414"
                    android:textColor="#FFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recoveredCasesTitle"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Recovered Cases"
                    android:textColor="#FFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/recoveredCasesValue"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="55438"
                    android:textColor="#FFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@color/redcolor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalDeathsTitle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@color/redcolor"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Total Deaths"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totalDeathsValue"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@color/redcolor"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="5762"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/stateName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Quebec(QC)"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:background="@drawable/earth" />
    </LinearLayout>
</LinearLayout>